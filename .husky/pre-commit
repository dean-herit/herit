#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Run lint-staged (includes component test validation)
npx lint-staged

if [ $? -ne 0 ]; then
  echo "âŒ Lint-staged checks failed"
  exit 1
fi

# Check if any component tests were modified and run them
COMPONENT_TESTS=$(git diff --cached --name-only | grep -E "\.cy\.tsx$|\.stories\.tsx$")

if [ ! -z "$COMPONENT_TESTS" ]; then
  echo "ğŸ§ª Component tests modified, running quick validation..."
  
  # Run a quick test to make sure Cypress can load the components
  npm run test:ct -- --headless --spec "**/components/**/*.cy.tsx" --run-timeout 30000 > /dev/null 2>&1
  
  if [ $? -ne 0 ]; then
    echo "âš ï¸  Warning: Some component tests may have issues. Run 'npm run test:ct' to verify."
    echo "ğŸš€ Continuing with commit (tests will be verified in CI)..."
  else
    echo "âœ… Component tests validation passed"
  fi
fi

echo "âœ¨ Pre-commit checks completed successfully!"
