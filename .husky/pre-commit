#!/bin/sh

echo "ğŸ” Running Vercel-like pre-commit checks..."

# Run lint-staged first (linting and formatting)
echo "ğŸ“ Running linting and formatting..."
npx lint-staged

if [ $? -ne 0 ]; then
  echo "âŒ Lint-staged checks failed"
  exit 1
fi

# Always run full Vercel-like validation on every commit
echo "ğŸ” Running full Vercel-like validation..."

# Vercel environment compatibility check
echo "ğŸ” Checking Vercel compatibility..."
node vercel-env-check.js

if [ $? -ne 0 ]; then
  echo "âŒ Vercel compatibility check failed"
  exit 1
fi

# TypeScript check (same as Vercel)
echo "ğŸ” Type checking..."
npm run typecheck

if [ $? -ne 0 ]; then
  echo "âŒ TypeScript check failed - this will fail in Vercel"
  exit 1
fi

# Production build test (same as Vercel)
echo "ğŸ—ï¸  Testing production build..."
npm run build

if [ $? -ne 0 ]; then
  echo "âŒ Production build failed - this will fail in Vercel"
  exit 1
fi

echo "âœ… Production build successful"

# Check if any component tests were modified
COMPONENT_TESTS=$(git diff --cached --name-only | grep -E "\.cy\.tsx$|\.stories\.tsx$")

if [ ! -z "$COMPONENT_TESTS" ]; then
  echo "ğŸ§ª Component tests modified, skipping validation in pre-commit (will be verified in CI)..."
fi

echo "âœ¨ Pre-commit checks completed successfully!"
