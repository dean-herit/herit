{
  "name": "herit",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "./scripts/dev.sh",
    "build": "next build",
    "start": "next start",
    "lint": "eslint --fix",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "db:generate": "drizzle-kit generate",
    "db:generate:safe": "npx tsx scripts/generate-migration.ts",
    "db:migrate": "drizzle-kit migrate",
    "db:migrate:safe": "npx tsx scripts/migrate.ts",
    "db:sync": "npx tsx scripts/sync-schema.ts",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "deploy": "./scripts/deploy.sh",
    "test:build": "npm run typecheck && npm run build",
    "analyze": "ANALYZE=true npm run build",
    "prepare": "husky",
    "test:auto": "node tests/automation/run-all-tests.js",
    "test:auto:headless": "HEADLESS=true node tests/automation/run-all-tests.js",
    "test:auth": "cd tests/debug-automation && node auth-complete-testing.js",
    "test:assets": "cd tests/debug-automation && node asset-management-testing.js",
    "test:e2e": "node tests/automation/suites/e2e.test.js",
    "test:mcp": "node tests/demo-tests/final-visual-demo.js",
    "test:debug": "node tests/debug-automation/debug-signup-test.js",
    "test:debug:interactive": "node tests/debug-automation/debug-signup-test.js --interactive",
    "test:e2e:full": "cd tests/debug-automation && node test-runner.js --env=development",
    "test:e2e:headless": "cd tests/debug-automation && node test-runner.js --headless --env=development",
    "test:e2e:ci": "cd tests/debug-automation && node test-runner.js --headless --env=ci --retries=3",
    "test:comprehensive": "cd tests/debug-automation && node comprehensive-test-runner.js --env=development",
    "test:comprehensive:headless": "cd tests/debug-automation && node comprehensive-test-runner.js --headless --env=development",
    "test:comprehensive:ci": "cd tests/debug-automation && node comprehensive-test-runner.js --headless --env=ci --retries=3"
  },
