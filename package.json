{
  "name": "herit",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "./scripts/dev.sh",
    "build": "next build",
    "start": "next start",
    "lint": "eslint --fix",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "db:generate": "drizzle-kit generate",
    "db:generate:safe": "npx tsx scripts/generate-migration.ts",
    "db:migrate": "drizzle-kit migrate",
    "db:migrate:safe": "npx tsx scripts/migrate.ts",
    "db:migrate:dev": "drizzle-kit migrate --config=drizzle-dev.config.ts",
    "db:migrate:staging": "drizzle-kit migrate --config=drizzle-staging.config.ts",
    "db:migrate:prod": "drizzle-kit migrate --config=drizzle-prod.config.ts",
    "db:sync": "npx tsx scripts/sync-schema.ts",
    "db:push": "echo 'DEPRECATED: Use db:migrate instead for safe migrations'",
    "db:reset": "npx tsx scripts/reset-database.ts",
    "db:validate": "npx tsx scripts/validate-schema.ts",
    "db:studio": "drizzle-kit studio",
    "deploy": "./scripts/deploy.sh",
    "test:build": "npm run typecheck && npm run build",
    "analyze": "ANALYZE=true npm run build",
    "prepare": "husky",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "test-storybook": "test-storybook --watch=false",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:component": "cypress run --component",
    "cy:e2e": "cypress run --e2e",
    "cy:headed": "cypress run --headed --e2e",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest watch",
    "test:unit:ui": "vitest --ui",
    "test:ct": "cypress run --component",
    "test:e2e": "cypress run --e2e",
    "test:e2e:headed": "cypress run --headed --e2e",
    "test:all": "pnpm test:unit && pnpm test:ct && pnpm test:e2e",
    "cli": "tsx tools/cli.ts",
    "test:cli": "pnpm cli status && pnpm cli history --limit 5"
  },
