# Herit Estate Planning Platform - Environment Variables
# Copy this file to .env.local and fill in your values

# ⚠️  CRITICAL: The following variables are REQUIRED for the build to succeed
# Without these, the app will NOT build or deploy to Vercel

# =============================================================================
# DATABASE (REQUIRED)
# =============================================================================
# PostgreSQL connection string (use Supabase, Vercel Postgres, or Neon)
# ❌ BUILD WILL FAIL WITHOUT THIS
POSTGRES_URL="postgresql://user:password@localhost:5432/herit"

# =============================================================================
# AUTHENTICATION (REQUIRED)
# =============================================================================
# JWT session secret (generate with: openssl rand -hex 32)
# ❌ BUILD WILL FAIL WITHOUT THIS
SESSION_SECRET="your-session-secret-32-characters-minimum"

# Refresh token secret (optional but recommended, defaults to SESSION_SECRET)
REFRESH_SECRET="your-refresh-token-secret-32-chars"

# Google OAuth 2.0
GOOGLE_CLIENT_ID="your_google_client_id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your_google_client_secret"
GOOGLE_REDIRECT_URI="http://localhost:3000/api/auth/google/callback"

# Apple Sign In 
APPLE_CLIENT_ID="your.apple.service.id"
APPLE_TEAM_ID="your_apple_team_id"
APPLE_KEY_ID="your_apple_key_id"
APPLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_apple_private_key\n-----END PRIVATE KEY-----"

# =============================================================================
# THIRD PARTY SERVICES (Optional)
# =============================================================================
# Stripe Identity verification
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Sentry error tracking
NEXT_PUBLIC_SENTRY_DSN="https://..."
SENTRY_ORG="your-org"
SENTRY_PROJECT="your-project"

# Vercel Blob storage (recommended for file uploads)
BLOB_READ_WRITE_TOKEN="vercel_blob_rw_..."

# AWS S3 for file storage (alternative to Vercel Blob)
AWS_ACCESS_KEY_ID="your-access-key"
AWS_SECRET_ACCESS_KEY="your-secret-key"
AWS_BUCKET_NAME="your-bucket"

# =============================================================================
# DEVELOPMENT
# =============================================================================
# Set to "development" for local development
NODE_ENV="development"